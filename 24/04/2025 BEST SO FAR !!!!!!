void loop(){
    
    int sensor_val3 = IR3.read();

    if (sensor_val3==0){
    SensorTicker.attach(&read_sensors, 0.0005);
    }


    else if (sensor_val3==1){
        turnTicker.attach(&right_wheel_forwards,0.0005);
    }
}




