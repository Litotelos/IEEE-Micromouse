


#include "mbed.h"

//Motors Control
PwmOut pwm1 (p21); 
DigitalOut dir1 (p20); //left wheel
PwmOut pwm2 (p22); 
DigitalOut dir2 (p19); // right wheel
//LED's
DigitalOut Led_F1(LED1);
DigitalOut Led_F2(LED2);
DigitalOut Led_F3(LED3);
DigitalOut Led_F4(LED4);


//IR Sensors
DigitalIn IR1 (p10); //right sensor
DigitalIn IR2 (p30);//left sensor
DigitalIn IR3 (p12);
DigitalIn IR4 (p13);
DigitalIn ULTRA (p14);

Ticker SensorTicker;
Ticker turnTicker;
Ticker valTicker;
Ticker maintick;

void loop();
void read_sensors();
void try_again();
void val();
void right_wheel_forwards();


int move_forwads(){
    dir1=1;
    dir2=1;

    pwm1.period_ms(10);
    pwm2.period_ms(10);
    pwm1=0.5;
    pwm2=0.5;
    wait(4);

    pwm1=0;
    pwm2=0;
    maintick.attach(&loop,0.0005);




}

void right_wheel_forwards(){
    
     dir1=1;
     pwm1.period_ms(10);
     pwm1=0.5;
     wait(3);
     maintick.attach(&loop,0.0005);

}
    
        
// }
 int left_wheel_forwards(){
    
     dir2=1;
     pwm2.period_ms(10);
     pwm2=0.5;
     wait(1.3);
     pwm2=0;
    
        
 }


int right_wheel_backwards(){
    
    dir1=0;
    pwm1.period_ms(10);
    pwm1=0.5;
    wait(2);
    pwm1=0;
    wait(3);
    
  
      
}

int stop(){
    pwm1=0;
    pwm2=0;
    wait(3);
}


int move(){
    //right_wheel_forwards();
        int sensor_val1=IR1.read();
        int sensor_val2=IR2.read();
        //int sensor_val2=IR2.read();

        //IR1.read();
        if (sensor_val1==1 && sensor_val2 ==1){
            move_forwads();
        }
        else{
            return 0;
        }
     
        
}
void loop();

void read_sensors(){
    // int value1=IR1.read();
    // int value2=IR2.read();
    // int value4=IR4.read();

    move_forwads();

}


void val();

void try_again(){
    SensorTicker.attach(&read_sensors, 0.0005);
    valTicker.attach(&val,0.005);

}

void val(){
    int value3=IR3.read();
    if (value3==1){
        turnTicker.attach(right_wheel_forwards,0.0005);
    }
    else{
        maintick.attach(&try_again,0.0005);
    }
}


